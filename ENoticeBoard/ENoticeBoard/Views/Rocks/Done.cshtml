@model ENoticeBoard.Rock

<div>
    <div class="form-horizontal">
        <div class="col-md-12">
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Subject): </label>
                @Html.DisplayFor(model => model.Subject, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Priority): </label>
                @Html.DisplayFor(model => model.Priority, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.DateDue): </label>
                @Html.DisplayFor(model => model.DateDue, new { @class = "form-control" })
            </div>
            
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <input type="submit" value="Done" class="btn btn-primary" />
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    }
</div>
@model List<ENoticeBoard>

<table class="table table-bordered table-condensed table-responsive display table-striped" id="ticketTB" style="word-wrap: normal; width: 100%">
    <thead>
    <tr>
        <th>ID</th>
        <th width="50%">Summary</th>
        
        <th width="10%">Date Created </th>
        <th width="10%">Date Updated</th>
        
        <th width="10%">Assigned</th>


    </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
        {
            <tr style="text-align: center">
                <td>@t.ENoticeBoardId</td>    
                <td>@if (t.Summary != null && t.Summary.Length > 35)
                    {
                        @t.Summary.Substring(0, 35)
                    }
                    else
                    {
                        @t.Summary
                    }</td>
                
                <td>@t.CreatedAt</td>
                <td>@t.UpdatedAt</td>
                
                <td>@t.FirstName @t.LastName</td>
            </tr>
        }
   
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $.fn.dataTable.moment('DD/MM/YY HH:mm:ss');
        $('#ticketTB').DataTable();

    });

    
</script>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - E-Notice Board</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/datatables.min.css"/>
    <script src="~/Content/DataTables/datatables.min.js"></script>
   
    @RenderSection("scripts", required: false)
    <style>
        .navbar-brand {
            background: url('Content/themes/base/images/one-harvest-logo.png') no-repeat;
            background-size: 50px 45px;
            width: 50px;
            background-color: white;
            display: block;
        }
        .navbar-inverse .navbar-brand:hover {
            color: white;
            background-color: white;
        }
        .skip-links {
            position: absolute;
            left: -999em;
            width: 990em;
        }
        .skip-link:focus {
            top: 0; /* Now the link will appear */
        }
    </style>
</head>
<body>
<ul class="skip-links">
    <li><a href="#main">Skip to main content</a></li>
</ul>
<div class="navbar navbar-inverse navbar-fixed-top">    
    <div class="container">
        <a style="background-color: gainsboro" href='@Url.Action("Index","Home")'><span class="navbar-brand"></span></a>
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>



        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("E-Board", "Index", "Home")</li>
                @*<li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
            </ul>
            @*@Html.Partial("_LoginPartial")*@
        </div>
    </div>
</div>
<div class="container body-content" id="main">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - One Harvest IT Department</p>
    </footer>
</div>


</body>
</html>
